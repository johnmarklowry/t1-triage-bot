# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here
SLACK_APP_TOKEN=xapp-your-app-token-here
ADMIN_CHANNEL_ID=C1234567890

# Local Dev Receiver Mode
# Default behavior:
# - NODE_ENV=development + SLACK_APP_TOKEN set => Socket Mode
# - NODE_ENV=production (or no SLACK_APP_TOKEN) => HTTP mode via /slack/events
# You can force HTTP mode in dev by setting SOCKET_MODE=false
SOCKET_MODE=true

# Database Configuration (Railway)
DATABASE_URL=postgresql://username:password@hostname:port/database
# Alternative: Individual database settings (for local development)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=triage_bot
# DB_USER=postgres
# DB_PASSWORD=your-database-password
DB_MAX_CONNECTIONS=20
DB_MIN_CONNECTIONS=2
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Application Configuration
PORT=3000
NODE_ENV=development

# Railway Cron Configuration
RAILWAY_CRON_SECRET=your-railway-cron-secret

# Optional: Google Sheets Integration (if used)
GOOGLE_SHEETS_CREDENTIALS_PATH=path/to/credentials.json
GOOGLE_SHEETS_SPREADSHEET_ID=your-spreadsheet-id

# Optional: OpenAI Integration (if used)
OPENAI_API_KEY=your-openai-api-key
