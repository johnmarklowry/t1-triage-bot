{
  "name": "triage-rotation-app",
  "version": "1.0.0",
  "description": "A Slack-based triage rotation system with Google Sheets",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "migrate": "node -e \"require('./db/migrate').runMigrations().then(() => process.exit(0))\"",
    "migrate-data": "node db/migrate-json-data.js",
    "db-status": "node -e \"require('./db/migrate').getMigrationStatus().then(status => { console.log(JSON.stringify(status, null, 2)); process.exit(0); })\""
  },
  "dependencies": {
    "@fastify/formbody": "^7.4.0",
    "@fastify/static": "^6.10.2",
    "@fastify/view": "^8.0.0",
    "@slack/web-api": "^6.9.0",
    "@slack/bolt": "^3.12.2",
    "dayjs": "^1.11.13",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "fastify": "^4.21.0",
    "googleapis": "^118.0.0",
    "handlebars": "^4.7.8",
    "node-cron": "^3.0.2",
    "openai": "^4.24.1",
    "pg": "^8.11.3",
    "pg-pool": "^3.6.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "url": "https://glitch.com/edit/#!/glitch-hello-node"
  },
  "license": "MIT",
  "keywords": [
    "node",
    "glitch"
  ]
}