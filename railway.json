{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "startCommand": "npx prisma migrate deploy && npm start",
        "healthcheckPath": "/",
        "healthcheckTimeout": 300,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    },
    "environments": {
        "production": {
            "variables": {
                "NODE_ENV": "production",
                "RAILWAY_CRON_SECRET": "set-in-railway-dashboard",
                "RAILWAY_CRON_SCHEDULE": "0 16 * * *",
                "RAILWAY_CRON_TARGET": "/jobs/railway/notify-rotation"
            }
        }
    }
}